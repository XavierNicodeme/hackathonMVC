{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="assets/css/style.css">
{% endblock %}
{% block title %}
    Game
{% endblock %}

{% block content %}
<div class="d-flex justify-content-center">
    <button type="button" class="btn border m-3"><a class="text-decoration-none text-white fs-2" href="/">Retour</a></button>
    <!-- Button trigger modal -->
    <button class="d-none"id="win-modal" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Launch demo modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">T'ES LE BOSS !!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Maintenant click sur ce bouton pour voir si t'assures vraiment !
                </div>
                <div class="modal-footer">
                    <a href="win">
                    <button type="button" class="btn btn-secondary" href="" data-bs-dismiss="modal">Let's go !</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
{% block javascript %}
<script src="//cdn.jsdelivr.net/npm/phaser@3.11.0/dist/phaser.js"></script>
<script src="/assets/js/script.js"></script>
{% endblock %}